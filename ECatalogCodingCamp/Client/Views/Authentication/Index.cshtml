@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Login Page";
}

<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-md-center h-100">
            <div class="card-wrapper">
                <div class="card fat">
                    <div class="card-body">
                        <h4 class="card-title">Login</h4>
                        <form method="POST" class="my-login-validation" id="myform" novalidate="">
                            <div class="form-group">
                                <label for="email">E-Mail Address</label>
                                <input id="email" type="email" class="form-control" name="email" required
                                       autofocus>
                                <div class="invalid-feedback">
                                    Email is invalid
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password">
                                    Password
                                    <a asp-area="" asp-controller="Authentication" asp-action="Forgot" class="float-right">
                                        Forgot Password?
                                    </a>
                                </label>
                                <input id="password" type="password" class="form-control" name="password" required
                                       data-eye>
                                <div class="invalid-feedback">
                                    Password is required
                                </div>
                            </div>

                            <div class="form-group m-0">
                                <button type="submit" class="btn btn-primary btn-block" id="login-btn">
                                    Login 
                                </button>
                            </div>
                            <div class="mt-4 text-center">
                                Don't have an account? <a asp-area="" asp-controller="Authentication" asp-action="RegisterRole">Create One</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{ 
    <script>

        $(document).ready(function () {
            $(`#myform`).submit(function (event) {
                event.preventDefault();
                login();
            });
        })

        let login = () => {
            let loginData = {
                Email: $(`#email`).val(),
                Password: $(`#password`).val()
            };

            console.log(loginData);

            $.ajax({
                url: `Authentication/Login`,
                type: `POST`,
                data: loginData,
                beforeSend: () => {
                    Swal.fire({
                        title: 'Please wait...',
                        showConfirmButton: false,
                        imageUrl: 'https://media.giphy.com/media/y1ZBcOGOOtlpC/giphy.gif',
                        backdrop: `rgba(0,0,0,0.6)`
                    })
                },
                success: data => {
                    console.log(`masuk done`);
                    console.log(data);
                    if (data == "Error") {
                        swal({
                            title: "Cannot login",
                            text: "Your Email and Password are incorrect.",
                            icon: "warning",
                            button: "Ok",
                        }).then(() => {
                            location.reload(true);
                        });
                    }
                    else {
                        window.location.href = data;
                    }
                },
                error: data => {
                    console.log(`masuk fail`);
                    console.log(data);
                }
            });
        }

        let sAlertLogin = () => {
            swal({
                title: "Done",
                text: "Successfully login.",
                icon: "success",
                button: "Ok",
            })
        }

       
    </script>
    

}