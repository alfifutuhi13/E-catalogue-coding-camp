@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Login Page";
}

<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-md-center h-100">
            <div class="card-wrapper">
                <div class="card fat">
                    <div class="card-body">
                        <h4 class="card-title">Login</h4>
                        <form method="POST" class="my-login-validation" id="myform" novalidate="">
                            <div class="form-group">
                                <label for="email">E-Mail Address</label>
                                <input id="email" type="email" class="form-control" name="email" required
                                       autofocus>
                                <div class="invalid-feedback">
                                    Email is invalid
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password">
                                    Password
                                    <a asp-area="" asp-controller="login" asp-action="Forgot" class="float-right">
                                        Forgot Password?
                                    </a>
                                </label>
                                <input id="password" type="password" class="form-control" name="password" required
                                       data-eye>
                                <div class="invalid-feedback">
                                    Password is required
                                </div>
                            </div>

                            <div class="form-group m-0">
                                <button type="submit" class="btn btn-primary btn-block" onclick="login()">
                                    Login
                                </button>
                            </div>
                            <div class="mt-4 text-center">
                                Don't have an account? <a asp-area="" asp-controller="login" asp-action="Register">Create One</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{ 
    <script>
        $(document).ready(function () {
            $(`#myform`).submit(function (event) {
                event.preventDefault();
            });
        })

        let login = () => {
            let data = new Object();

            data.email = $(`#email`).val();
            data.password = $(`#password`).val();
           

            $.ajax({
                url: `https://localhost:44321/api/Accounts/Login`,
                type: `POST`
            }).done(result => {
                alert(result);
            }).fail(result => {
                alert(result);
            })
        }
    </script>
    

}